<div class="links">
  <% if user_signed_in? && (current_user.email.match?(/gmail|hotmail/) == false) %>
    <%= link_to 'Editar', edit_company_path %>
    <%= link_to 'Vagas', vacancies_path %>
  <% end %>
</div>

<div class="informations">
    <h1> <%= @company.name %> </h1>
    <% if @company.logo.attached? %>
      <%= image_tag @company.logo %>
    <% end %>
    <%= @company.address %>
    <%= @company.cnpj %>
    <%= @company.site %>
    <%= @company.social_network %>
</div>

<% unless user_signed_in? %>
  <%= link_to 'Voltar', :back %>
<% end %>